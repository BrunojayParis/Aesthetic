---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Conectemos!" />

  <ContactUs
    names="Información"
    title="Contactanos Hoy!!"
    subtitle="Podes encontrar respuestas a tus consultas en la sección de Preguntas Frecuentes"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Si llenas este formulario, nos das autorización a contestarte.',
    }}
    description="Normalmente contestamos en 24hs."
  />

  <!-- Features2 Widget ************** -->

  </Layout>
